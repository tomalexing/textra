{
  "name": "textrasimple",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "node-sass": "^4.5.2",
    "npm-run-all": "^4.0.2",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-router-dom": "^4.1.1"
  },
  "devDependencies": {
    "flow-bin": "^0.45.0",
    "react-scripts": "0.9.5"
  },
  "scripts": {
    "build-css": "node-sass src/style/ -o public/ --output-style=compressed && node-sass src/style/ -o src/style/ --output-style=compressed",
    "watch-css": "npm run build-css && node-sass src/style/ -o src/style/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build": "npm run build-css && react-scripts build",
    "test": "node scripts/test.js --env=jsdom",
    "flow": "flow"
  }
}
